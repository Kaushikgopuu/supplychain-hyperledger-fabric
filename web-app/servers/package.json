{
    "name": "supplychain-server",
    "version": "1.0.0",
    "description": "hyperledger fabric app with js backend",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "dev": "nodemon app.js",
        "start:fabric": "dotenv -e .env.fabric node app.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "Batch 5",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.3.0",
        "lowdb": "^1.0.0",
        "morgan": "^1.9.1",
        "node-schedule": "^1.3.2"
    },
    "optionalDependencies": {
        "fabric-ca-client": "^1.4.5",
        "fabric-client": "^1.4.5",
        "fabric-network": "^1.4.5"
    },
    "devDependencies": {
        "nodemon": "^2.0.22",
        "dotenv-cli": "^7.4.2",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-prettier": "^3.1.2",
        "prettier": "^1.19.1"
    },
    "engines": {
        "node": ">=10 <=12"
    },
    "resolutions": {
        "minimist": "^1.2.5",
        "jsrsasign": "^8.0.13"
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "no-console": 0,
            "prettier/prettier": 1
        }
    },
    "eslintIgnore": [
        "node_modules/"
    ],
    "prettier": {
        "singleQuote": true,
        "semi": true,
        "useTabs": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "printWidth": 120
    }
}
