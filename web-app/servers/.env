# Backend server config
PORT=8090
AS_LOCALHOST=true

# Fabric network
CHANNEL=supplychainchannel
CONTRACT=dummycc6

# CA/Admin
ADMIN=admin
ADMIN_SECRET=adminpw

# Connection profiles
MANUFACTURER_CONN=./fabric/manufacturer-connection.json
MIDDLEMEN_CONN=./fabric/middlemen-connection.json
CONSUMER_CONN=./fabric/consumer-connection.json

# Wallet paths
MANUFACTURER_WALLET=./wallets/manufacturer
MIDDLEMEN_WALLET=./wallets/middlemen
CONSUMER_WALLET=./wallets/consumer

# MSP IDs
MANUFACTURER_MSP=ManufacturerMSP
MIDDLEMEN_MSP=MiddleMenMSP
CONSUMER_MSP=ConsumerMSP

# CA endpoints
MANUFACTURER_CA_ADDR=https://localhost:7054
MIDDLEMEN_CA_ADDR=https://localhost:8054
CONSUMER_CA_ADDR=https://localhost:9054

# Auth
JWT_SECRET=dev-secret

# Dev toggles
SKIP_FABRIC_ENROLL=true
ALLOW_DEV_LOGIN=true
DEV_FAKE_STORAGE=true
