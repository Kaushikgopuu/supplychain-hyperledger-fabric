# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=7d

# Hyperledger Fabric Configuration
FABRIC_NETWORK_PATH=../../fabric-network
CHANNEL_NAME=supplychainchannel
CHAINCODE_NAME=supplychain
WALLET_PATH=./wallet
MSP_ID=ManufacturerMSP

# Organization Configuration
ORG_NAME=manufacturer
ORG_DOMAIN=manufacturer.supplychain.com
PEER_ENDPOINT=peer0.manufacturer.supplychain.com:7051
CA_ENDPOINT=ca.manufacturer.supplychain.com:7054

# Admin User
ADMIN_USER_ID=admin
ADMIN_PASSWORD=adminpw

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Notifications
NOTIFICATION_EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password